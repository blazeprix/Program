#include <stdio.h>
void main()
{
  int T;
  float V,P,net;
  system("cls");
  printf("Program calculate TAX\n");
  printf("Enter Type:");
  scanf("%f",&P);
  if (T==1){
    V = P*(7.0/100.0);
    printf("VAT is %.2f\n",V);
    net = V + P;
    printf("Total price is %.2f",net);
   }
   else if (T==2){
      V = P*(10.0/100.0);
      printf("VAT is %.2f\n",V);
      net = V + P;
      printf("Total price is %.2f",net);
   }
   else if (T==3){
      V = P*(15.0/100.0);
      printf("VAT is %.2f\n",V);
      net = V + P;
      printf("Total price is %.2f",net);
   }else{
      printf("error, Please try again");
    }
}
